html
    head
        title!='Signup page'
    body
        main
            h1 Signup page

            p.formMessage #{message}
            form(action="/signup" method="post")
                p
                    label Email
                    input(type="text" name="email")
                p
                    label Password
                    input(type="password" name="password")
                p
                    button(type="submit") Signup
